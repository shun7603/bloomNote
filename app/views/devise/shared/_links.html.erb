<%- if controller_name != 'sessions' %>
  <div class="mb-2 text-center">
    <%= link_to "ログインはこちら", new_session_path(resource_name), class: "link-secondary small" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mb-2 text-center">
    <%= link_to "新しくアカウントを作成する", new_registration_path(resource_name), class: "link-secondary small" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mb-2 text-center">
    <%= link_to "パスワードを忘れたら", new_password_path(resource_name), class: "link-secondary small" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="mb-2 text-center">
    <%= link_to "確認メールを再送する", new_confirmation_path(resource_name), class: "link-secondary small" %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="mb-2 text-center">
    <%= link_to "ロック解除メールを再送する", new_unlock_path(resource_name), class: "link-secondary small" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="text-center mt-3">
    <p class="small text-muted">SNSでログイン</p>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), class: "btn btn-outline-secondary btn-sm w-100 mb-2", data: { turbo: false } %>
    <% end %>
  </div>
<% end %>